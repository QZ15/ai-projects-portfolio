{
  "functions": {
    "source": "functions",
    "predeploy": "npm --prefix functions run build"
  },
  "hosting": [
    {
      "site": "ai-projects-portfolio",
      "public": "apps/glaze/frontend/dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        { "source": "/api/**", "function": "api" },
        { "source": "/glaze/**", "destination": "./glaze/index.html" }
      ]
    },
    {
      "site": "ai-projects-portfolio",
      "public": "apps/portfolio/frontend/dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        { "source": "/api/**", "function": "api" },
        { "source": "/**", "destination": "/index.html" }
      ]
    }
  ]
}
