{
  "functions": {
    "source": "functions",
    "predeploy": "npm run build --prefix functions"
  },
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "/api/**", "function": "api" },
      { "source": "/glaze/**", "destination": "/glaze/index.html" },
      { "source": "/portfolio/**", "destination": "/portfolio/index.html" },
      { "source": "/landing/**", "destination": "/landing/index.html" },
      { "source": "/**", "destination": "/portfolio/index.html" }
    ]
  }
}
