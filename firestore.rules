rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId &&
        !("stripeCustomerId" in request.resource.data) &&
        !("isPremium" in request.resource.data) &&
        !("subscription" in request.resource.data) &&
        !("updatedAt" in request.resource.data) &&
        !("isTester" in request.resource.data);

      // allow user access to subcollections under their document
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
